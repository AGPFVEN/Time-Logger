{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Services (Postgres)",
            "type": "shell",
            "command": "docker",
            "args": ["compose", "up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Docker Services (Postgres)", 
            "type": "shell",
            "command": "docker",
            "args": ["compose", "down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Project Docker Volumes",
            "type": "shell",
            "command": "sh",
            "args": ["-c", "docker volume ls -q --filter name=time-logger | xargs -r docker volume rm"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}